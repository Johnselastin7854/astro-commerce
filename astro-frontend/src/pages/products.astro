import List from "../components/List.astro";
import Base from "../layouts/Base.astro";
const title = "Products | AstroCommerce";

const catId = Astro.url.pathname.split("/").pop(); // Assuming you're getting category ID from URL
let maxPrice = 1000;
let sort = null;
let selectedSubCats = [];

