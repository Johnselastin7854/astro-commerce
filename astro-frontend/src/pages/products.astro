---

<Base title={title}>
  <div class=" px-8 py-12  flex">
    <!-- Left Filter Section -->
    <div class="flex-1 sticky top-12 h-full">
      <div class="mb-8">
        <h2 class="font-normal mb-5">Product Categories</h2>
        <!-- {data.map(item => (
          <div class="mb-2">
            <input
              type="checkbox"
              id={item.id}
              value={item.id}
              class="mr-2"
            />
            <label for={item.id}>{item.attributes.title}</label>
          </div>
        ))} -->
        <div class="mb-2">
            <input
              type="checkbox"
              id="1"
              value={1}
              class="mr-2"
            />
            <label for='1'>Shoes</label>
          </div>
        <div class="mb-2">
            <input
              type="checkbox"
              id="2"
              value={2}
              class="mr-2"
            />
            <label for='2'>Skirts</label>
          </div>
        <div class="mb-2">
            <input
              type="checkbox"
              id="3"
              value={3}
              class="mr-2"
            />
            <label for='3'>Coats</label>
          </div>
      </div>

      <!-- Price Filter -->
      <div class="mb-8">
        <h2 class="font-normal mb-5">Filter by price</h2>
        <div class="flex items-center mb-2">
          <span>0</span>
          <input
            type="range"
            min="0"
            max="1000"
            value={maxPrice}
            class="mx-4"
          />
          <span>{maxPrice}</span>
          
        </div>
      </div>

      <!-- Sort Section -->
      <div class="mb-8">
        <h2 class="font-normal mb-5">Sort by</h2>
        <div class="mb-2">
          <input
            type="radio"
            id="asc"
            value="asc"
            name="price"
            class="mr-2"
          />
          <label for="asc">Price (Lowest first)</label>
        </div>
        <div class="mb-2">
          <input
            type="radio"
            id="desc"
            value="desc"
            name="price"
            class="mr-2"
          />
          <label for="desc">Price (Highest first)</label>
        </div>
      </div>
    </div>

    <!-- Right Product List Section -->
    <div class="flex-3">
      <img
        src="https://images.pexels.com/photos/1074535/pexels-photo-1074535.jpeg?auto=compress&cs=tinysrgb&w=1600"
        alt="Category Image"
        class="w-full h-72 object-cover mb-12 rounded-sm"
      />
      <!-- List Component, pass props as needed -->
      <List catId={catId} maxPrice={maxPrice} sort={sort} subCats={selectedSubCats} />
    </div>
  </div>

  <!-- Script for handling events -->
 
</Base>
